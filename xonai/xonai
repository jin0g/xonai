#!/bin/sh
# xonai - Launch xonsh with xonai extension loaded

# Launch xonsh with xonai pre-loaded
# Uses xonsh's ability to execute multiple commands in sequence
exec xonsh -c "
# Load xonai-specific configuration if it exists
import os
if os.path.exists(os.path.expanduser('~/.xonairc')):
    source ~/.xonairc

# Load xonai xontrib
xontrib load xonai
" "$@"